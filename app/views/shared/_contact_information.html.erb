<section class="section-lg bg-default">
  <div class="container">
    <div class="row row-50">
      <!-- Left Column: Technology Grid -->
      <div class="col-md-6 col-lg-6 d-flex flex-column">
        <h3 class="heading-decorated">Technology</h3>
        <div class="row">
          <% images = [
            { src: 'relativity.jpg', alt: 'Relativity' },
            { src: 'disco/disco-logo.png', alt: 'Disco' },
            { src: 'digital_forensics/cellebrite.jpg', alt: 'Cellebrite' },
            { src: 'digital_forensics/Metaspike_Logo.webp', alt: 'Metaspike' },
            { src: 'brainspace-logo.png', alt: 'Brainspace' },
            { src: 'message_crawler_logo.png', alt: 'Message Crawler' }
          ] %>
          <% images.each do |img| %>
            <div class="col-6 d-flex align-items-center justify-content-center mb-4">
              <%= image_tag img[:src], alt: img[:alt], class: 'img-fluid' %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <div class="col-md-6 col-lg-6">
        <h3 class="heading-decorated">Get in Touch with Us</h3>
        <form class="rd-mailform rd-mailform_style-1" data-form-output="form-output-global" data-form-type="contact" method="post" action="/contact">
          <div class="form-wrap form-wrap_icon linear-icon-man">
            <input class="form-input" id="contact-name" type="text" name="name" data-constraints="@Required">
            <label class="form-label" for="contact-name">First and Last Name *</label>
          </div>
          <div class="form-wrap form-wrap_icon linear-icon-envelope">
            <input class="form-input" id="contact-email" type="email" name="email" data-constraints="@Email @Required">
            <label class="form-label" for="contact-email">E-mail *</label>
          </div>
          <div class="form-wrap form-wrap_icon linear-icon-telephone">
            <input class="form-input" id="contact-phone" type="text" name="phone" data-constraints="@Numeric">
            <label class="form-label" for="contact-phone">Phone</label>
          </div>
          <div class="form-wrap form-wrap_icon linear-icon-feather">
            <textarea class="form-input" id="contact-message" name="message" data-constraints="@Required"></textarea>
            <label class="form-label" for="contact-message">Message *</label>
          </div>
          <button class="button button-primary" type="submit">send</button>
        </form>
      </div>
    </div>
  </div>
</section>

<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDDmc4W2bInzVyPwwFybKoNZxJEZZlPKng&callback=initMap">
</script>